#!/bin/sh

RTA_HOME="`dirname $0`/../"
echo $RTA_HOME | grep "^/" > /dev/null 2>&1
if [ $? -ne 0 ]; then
  RTA_HOME="`pwd`/$RTA_HOME"
fi

JRUBY_CMD=`which jruby 2>&1 | grep -v "no jruby"`
if [ "$JRUBY_CMD" = "" ]
then
  if [ "$CLASSPATH" != "" ]
  then
    JRUBY_COMPLETE=`echo $CLASSPATH | sed 's/:/ /g' | xargs -n 1 basename | grep jruby-complete.*jar`
  fi
  if [ "$JRUBY_COMPLETE" = "" ]
  then
    echo "JRuby not found (install JRuby or add jruby-complete-x.x.x.jar to CLASSPATH)"
    exit 1
  fi
  JAVA_MEM=-Xmx500m
  JAVA_STACK=-Xss2048k
  JAVA_VM=-client
  JAVA_OPTS="$JAVA_VM $JAVA_MEM $JAVA_STACK"
  JRUBY_CMD="java $JAVA_OPTS org.jruby.Main"
fi

# 引数をカンマ区切りの文字列 ARGV にする
ARGV=""
for arg in "$@"
do
  arg="'$arg'"
  if [ "$ARGV" = "" ]
  then
    ARGV="$arg"
  else
    ARGV="$ARGV,$arg"
  fi
done

exec $JRUBY_CMD -e "require '$RTA_HOME/lib/rta'; RTA::Controller::Runner.run($ARGV)"
